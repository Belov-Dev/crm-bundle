{% extends '@A2CRM/layout.html.twig' %}

{% block content %}

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Organization</h3>
            <div class="box-tools">
                <a href="{{ path('crm_object_edit', {'objectName': objectName})}}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Create new {{ entity.name }}</a>
            </div>
        </div>
        <div class="box-body table-responsive no-padding">
            {% include '@A2CRM/datagrid/datagrid.html.twig' %}
        </div>
        <div class="box-footer">
            {% if dataGrid.pagination.enabled %}
                {% include '@A2CRM/datagrid/datagrid.pagination.html.twig' %}
            {% endif %}
        </div>
    </div>

{% endblock %}