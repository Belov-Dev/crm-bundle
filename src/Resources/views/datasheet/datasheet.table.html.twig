<table class="table table-hover table-stiped table-sm table-striped">
    <thead>

    {% if hasActions %}
        <th>&nbsp;</th>
    {% endif %}

    {% for field in fields %}
        <th>{{ field.title }}</th>
    {% endfor %}

    </thead>
    <tbody>

    {% for item in items %}
        <tr>

            {% if hasActions %}
                <td>
                    {% include actionsTemplate with {'item': item, 'datasheet': datasheet} %}
                </td>
            {% endif %}

            {% for name, value in item %}
                <td>
                    {{ value|raw }}
                </td>
            {% endfor %}

        </tr>
    {% endfor %}

    </tbody>
</table>