{% extends '@A2CRM/layout.html.twig' %}

{% block page_title %}Entities list{% endblock %}

{% block content %}

    <a href="{{ path('crm_entity_edit') }}"
       class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add new entity</a><br><br>

    <div class="row">
        {% for entity in entities %}
            <div class="col-sm-3">
                <div class="box">
                    <table class="box-body table table-striped table-responsive table-bordered">
                        <thead>
                        <tr>
                            <th>
                                {{ entity.name }}
                                <div class="btn-group btn-group-xs pull-right">
                                    <a href="{{ path('crm_entity_update_proxy', {'entityName': entity.name|toSnakeCase}) }}"
                                       class="btn btn-primary"><i class="glyphicon glyphicon-refresh"></i></a>
                                    <a href="{{ path('crm_entity_edit', {'entityName': entity.name|toSnakeCase}) }}"
                                       class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>

                                    {% set entityNameSnakeCase = entity.name|toSnakeCase %}
                                    <a href="{{ path('crm_object_list', {'objectName': entity.name|toSnakeCase}) }}"
                                       class="btn btn-primary"><i class="glyphicon glyphicon-eye-open"></i></a>
                                </div>

                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for field in entity.fields %}
                            <tr>
                                <td>
                                    <a href="{{ path('crm_entity_field_edit', {'entityName': entity.name|toSnakeCase, 'entityField': field.id}) }}">
                                        {{ field.name }}
                                        <small class="text-muted">({{ field.type }})</small>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td>
                                <a href="{{ path('crm_entity_field_edit', {'entityName': entity.name|toSnakeCase}) }}"
                                   class="btn btn-default btn-sm btn-block">
                                    <i class="glyphicon glyphicon-plus"></i> add new field
                                </a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}