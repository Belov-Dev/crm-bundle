{% extends '@A2CRM/layout.html.twig' %}

{% block content %}
    <a href="{{ path('a2crm_entity_edit') }}"
       class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Add new entity</a><br><br>
    <div class="row">
        {% for entity in entities %}
            <div class="col-sm-2">
                <table class="table table-striped table-responsive table-bordered">
                    <thead>
                    <tr>
                        <th>
                            <div class="btn-group btn-group-xs">
                                <a href="#" class="btn btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                                <a href="{{ path('a2crm_entity_edit', {'entity': entity.id}) }}"
                                   class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i></a>
                            </div>
                        </th>
                        <th>
                            {{ entity.name }}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {#                                        <tr>#}
                    {#                                            <td>#}
                    {#                                                <div class="btn-group btn-group-xs">#}
                    {#                                                    <a href="#"#}
                    {#                                                       class="btn btn-default"><i class="glyphicon glyphicon-remove"></i> remove</a>#}
                    {#                                                    <a href=""#}
                    {#                                                       class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i> edit</a>#}

                    {#                                                </div>#}
                    {#                                            </td>#}
                    {#                                        </tr>#}
                    {% for field in entity.fields %}
                        <tr>
                            <td>
                                <div class="btn-group btn-group-xs">
                                    <a href="#" class="btn btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                                    <a href="{{ path('a2crm_entity_field_edit', {'entity': entity.id, 'entityField': field.id}) }}"
                                       class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i></a>
                                </div>
                            </td>
                            <td>
                                {{ field.name }} <small class=" text-muted">({{ field.type }})</small>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <a href="{{ path('a2crm_entity_field_edit', {'entity': entity.id}) }}" class="btn btn-default btn-xs btn-block">
                                <i class="glyphicon glyphicon-plus"></i> add new field
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}